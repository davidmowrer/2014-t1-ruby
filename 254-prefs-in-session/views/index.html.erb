<p>
	<%= label_tag :color, "Favorite color" %>
	<br>
	<%= select_tag :color,
	    options_for_select(["blue", "yellow", "purple"], @color),
	    prompt: "" %>
</p>

<p>
	<%= label_tag :letter, "Favorite letter" %>
	<br>
	<%= radio_button_tag :letter, "A", @letter == "A" %> A
	<%= radio_button_tag :letter, "B", @letter == "B" %> B
	<%= radio_button_tag :letter, "C", @letter == "C" %> C
</p>

<p>
	<%= label_tag :number, "Favorite number" %>
	<br>
	<%= text_field_tag :number, @number %>
</p>

<p>
	<%= submit_tag "Update preferences" %>
</p>

<p>
	<a href="/logout">Logout</a>
</p>
