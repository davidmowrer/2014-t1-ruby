<h1>Add new user</h1>

<p>
  <%= error_messages_for @user %>
</p>

<p>
  <%= label_tag :email %>
  <br>
  <%= text_field_tag :email, @email %>
</p>

<p>
  <%= label_tag :first_name %>
  <br>
  <%= text_field_tag :first_name, @first_name %>
</p>

<p>
  <%= label_tag :age %>
  <br>
  <%= text_field_tag :age, @age %>
</p>

<p>
  <%= submit_tag "Add user" %>
</p>

