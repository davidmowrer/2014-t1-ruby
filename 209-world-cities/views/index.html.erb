<h1>World cities</h1>

<table class="table">

  <tr>
    <th>City name</th>
    <th>Country flag</th>
    <th>Time zone</th>
    <th>Population</th>
  </tr>

  <% WorldCity.order(:name).each do |city| %>
    <tr>
      <td><%= city.name %>, <%= city.country %></td>
      <td>
        <img src="/images/<%= city.country_flag_filename %>">
      </td>
      <td>UTC+0<%= city.time_zone_offset %>00</td>
      <td><%= city.population_in_millions %>,000,000</td>
    </tr>
  <% end %>
</table>
